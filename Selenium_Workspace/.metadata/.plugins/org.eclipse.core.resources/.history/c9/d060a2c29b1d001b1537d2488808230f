package com.stream.tutorial;

import java.util.ArrayList;
import java.util.stream.Stream;

import org.testng.annotations.Test;

public class DemoTest {

	public void streamFilter() {
		ArrayList<String> names = new ArrayList<String>();
		names.add("Abhijjeth");
		names.add("Abhisheik");
		names.add("Don");
		names.add("Jack");
		names.add("Mary");
		names.add("Alex");

		Long namesCount = names.stream().filter(s -> s.startsWith("A")).count();
		System.out.println(namesCount);
	}

	@Test
	public void streamCreate() {
		long d = Stream.of("Abhijjeth", "Don", "Jack", "Mary", "Alex").filter(s -> s.startsWith("A")).count();
		System.out.println(d);
	}

	@Test
	public void printNamesUsingLength() {
		ArrayList<String> names = new ArrayList<String>();
		names.add("Abhijjeth");
		names.add("Abhisheik");
		names.add("Don");
		names.add("Jack");
		names.add("Mary");
		names.add("Alex");

		names.stream().filter(s -> s.length() > 4).forEach(s -> System.out.println(s));

		names.stream().forEach(s -> {
			System.out.println(s);
		});
	}

	@Test
	public void printAllNames() {
		ArrayList<String> names = new ArrayList<String>();
		names.add("Abhijjeth");
		names.add("Abhisheik");
		names.add("Don");
		names.add("Jack");
		names.add("Mary");
		names.add("Alex J");
		names.stream().forEach(s -> {
			System.out.println(s);
		});
	}
}